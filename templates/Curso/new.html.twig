{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Novo Curso {% endblock %}

{% block body %}
    <div class="d-flex align-items-center flex-column background">
        <div class="d-flex align-items-center flex-column">
            <div><h2 class="title fs-3"><i class="fa-solid fa-plus"></i>
                    Novo Curso</h2>
            </div>

            {% if menssagem is defined and menssagem %}
                <div class="flash-sucess" role="alert">
                    {{menssagem}}
                </div>
            {% endif %}
            {{ include('/Curso/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ component('Select2', { id: 'curso_alunos', placeholder: 'Selecione um ou mais alunos' }) }}
{% endblock %}
