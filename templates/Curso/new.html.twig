{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Novo Curso {% endblock %}

{% block body %}
    <div class="d-flex align-items-center flex-column">
        <div><h2>Novo Curso</h2></div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="d-flex justify-content-center">
            <div class="row">
                <div class="col-sm-12">
                    {{ form_label(form.courseName) }}
                    {{ form_widget(form.courseName) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.workload) }}
                    {{ form_widget(form.workload) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.modality) }}
                    {{ form_widget(form.modality) }}
                </div>
                {{ form_widget(form) }} <br>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary me-2" type="submit">Salvar</button>
            <a class="btn btn-outline-secondary" href="{{ path('cursos_index')}}">Cancelar</a>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}