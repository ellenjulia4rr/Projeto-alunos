{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Novo Aluno {% endblock %}

{% block body %}
    <div class="d-flex align-items-center flex-column">

        <div><h1>Novo Aluno</h1></div>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="d-flex justify-content-center">
            <div class="row w-50">
                <div class="col-sm-11">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="col-sm-5">
                    {{ form_label(form.birthDate) }}
                    {{ form_widget(form.birthDate) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.gender) }}
                    {{ form_widget(form.gender) }}
                </div>
                <div class="col-sm-5">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                </div>
                <div class="col-sm-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-sm-12 mt-3">
                    {{ form_label(form.cursos) }}
                    {{ form_widget(form.cursos) }}
                </div>
                {{ form_widget(form) }} <br>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary me-2" type="submit">Salvar</button>
            <a class="btn btn-outline-secondary" href="{{ path('alunos_index')}}">Cancelar</a>
        </div>

            {{ form_end(form) }}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#aluno_cursos').select2({
                'placeholder': 'Selecione um ou mais cursos'
            });
        })
    </script>
{% endblock %}


