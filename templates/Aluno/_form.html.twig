{{ form_start(form) }}

<div class="d-flex justify-content-center">
    <div class="row w-50">
        <div class="col-sm-12">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.birthDate) }}
            {{ form_widget(form.birthDate) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.gender) }}
            {{ form_widget(form.gender) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone) }}
        </div>
        <div class="col-sm-6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="col-sm-12 mt-3">
            {{ form_label(form.cursos) }}
            {{ form_widget(form.cursos) }}
        </div>
        {{ form_widget(form) }} <br>
    </div>
</div>


<div class="d-flex justify-content-center">
    <button class="btn btn-primary bnt-rounded me-2" type="submit"> <i class="fa-solid fa-check"></i>
        Salvar</button>
    <a class="btn btn-outline-secondary bnt-rounded" href="{{ path('alunos_index')}}"><i class="fa-solid fa-x"></i>
        Cancelar</a>
</div>
{{ form_end(form) }}