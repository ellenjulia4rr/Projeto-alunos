{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Alunos {% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center">
        <h1>Alunos</h1>
        <a class="btn btn-outline-primary" style="text-decoration: none" href="{{ path('alunos_create')}}"> <i class="fa-solid fa-circle-plus"></i>
            Novo Aluno</a>
    </div>

    <div class="p-3 rounded" style="background-color: #e3e1e1">
        <div class="py-1 text-muted h6"><i class="fa-solid fa-filter"></i> Filtrar por:</div>

        <form class="w-100" method="post">
            {{ form_widget(form._token) }}
            <div class="row mb-3">
                <div class="col-sm-6">
                    {{ form_widget(form.name) }}
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.code) }}
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.gender) }}
                </div>
                <div class="col-sm-3 mt-2">
                    {{ form_widget(form.birthDate) }}
                </div>
                <div class="col-sm-3 mt-2">
                    {{ form_widget(form.phone) }}
                </div>
                <div class="col-sm-3 mt-2">
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-sm-3 mt-2">
                    {{ form_widget(form.creationDate) }}
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Buscar </button>
                <button type="reset" class="btn btn-secondary ms-2">Limpar</button>
            </div>
        </form>
    </div>

    <table class="table table-striped">
       <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Gênero</th>
                <th>Telefone</th>
                <th>E-mail</th>
                <th>Data de Criação</th>
                <th>Opções</th>
            </tr>
       </thead>
        <tbody>
        {% for aluno in alunos %}
            <tr>
                <td>{{ aluno.id }}</td>
                <td>{{ aluno.name }}</td>
                <td>{{ aluno.birthDate | date('d/m/Y') }}</td>
                <td>{{ aluno.getGenderName() }}</td>
                <td>{{ aluno.phone }}</td>
                <td>{{ aluno.email }}</td>
                <td>{{ aluno.registrationDate | date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path("alunos_edit", {id: aluno.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a href="{{ path('alunos_delete', {aluno: aluno.id})}}"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}